{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true
  },
  "include": ["vite.config.ts", "src/scripts/**/*"]
} 